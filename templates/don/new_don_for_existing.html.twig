{% extends 'base.html.twig' %}

{% form_theme form 'form/custom_theme.html.twig' %}
{% block title %}New Don for an existing donor{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" crossorigin="anonymous">
{% endblock %}
{% block body %}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">New Don for an existing donor</h1>
            <div class="card mb-4">
                <div class="card-header"><i class="fas fa-table mr-1"></i></div>
                <div class="card-body">
                    {{ form_start(form) }}
                    {{ form_widget(form) }}
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" crossorigin="anonymous" ></script>

  <script src="{{ asset('js/date.js') }}"></script>
{% endblock %}
