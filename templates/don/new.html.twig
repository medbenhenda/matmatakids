{% extends 'base.html.twig' %}
{% form_theme form 'form/custom_theme.html.twig' %}
{% block title %}Nouveau don!{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" crossorigin="anonymous">
{% endblock %}

{% block body %}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Dons</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Don/New</li>
            </ol>
            <div class="card mb-4">
                <div class="card-header"><i class="fas fa-table mr-1"></i>New don</div>
                <div class="card-body">

                {{ form_start(form) }}
                    <div class="my-custom-class-for-errors">
                        {{ form_errors(form) }}
                    </div>

                    <div class="form-row">
                      <div class="form-group col-md-6">
                         {{ form_row(form.firstName) }}
                      </div>
                      <div class="form-group col-md-6">
                        {{ form_row(form.lastName) }}
                      </div>
                    </div>
                    <div class="form-row">
                        <div class="form-group col-md-6">
                           {{ form_row(form.email) }}
                        </div>
                        <div class="form-group col-md-6">
                          {{ form_row(form.mobile) }}
                        </div>

                    </div>

                    <div class="form-row">
                      <div class="form-group col-md-4">
                        {{ form_row(form.address) }}
                      </div>
                      <div class="form-group col-md-2">

                      {{ form_row(form.zipCode) }}
                      </div>
                      <div class="form-group col-md-3">
                      {{ form_row(form.city) }}
                      </div>
                      <div class="form-group col-md-3">
                      {{ form_row(form.country) }}
                      </div>
                    </div>


                  {{ form_rest(form) }}
                {{ form_end(form) }}
                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  
  <script src="//cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" crossorigin="anonymous" ></script>

  <script src="{{ asset('js/date.js') }}"></script>
{% endblock %}
