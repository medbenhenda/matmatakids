{% extends 'base.html.twig' %}
{% form_theme form 'form/custom_theme.html.twig' %}
{% block title %}Affect Sponsor to case{% endblock %}
{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.css" crossorigin="anonymous">
{% endblock %}
{% block body %}

<div id="layoutSidenav_content">
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Affect sponsor to case</h1>
            <ol class="breadcrumb mb-4">
                <li class="breadcrumb-item active">Case/Affect</li>
            </ol>
            <div class="card mb-4">
                <div class="d-flex flex-row-reverse bd-highlight mb-2">
                    <div class="p-2 bd-highlight"><a href="#">statistics</a></div>
                    <div class="p-2 bd-highlight"><a href="{{path('case')}}">Cases list</a></div>
                    <div class="p-2 bd-highlight"><a href="{{path('sponsor')}}">sponsors list</a></div>
                </div>
                <div class="card-header"><i class="fas fa-hand-holding-heart mr-1"></i>Affect sponsor to case</div>
                <div class="card-body">



                <div class="card bg-light mb-3">
                    <div class="card-header">
                        <div class="row">
                            <div class="text-left col-md-6"><p class="nav-link">{{case}}</p></div>
                        </div>
                    </div>

                </div>

                {{ form(form) }}


                </div>
            </div>
        </div>
    </main>
</div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
  <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/js/bootstrap-datepicker.min.js" crossorigin="anonymous" ></script>

  <script src="{{ asset('js/date.js') }}"></script>
{% endblock %}
