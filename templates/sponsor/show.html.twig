{% extends 'base.html.twig' %}

{% block title %}Sponsor details {{ item }}{% endblock %}

{% block body %}

	<div id="layoutSidenav_content">
		<main>
			<div class="container-fluid pt-3 pb-3">
				<h1 class="mt-4">Sponsor details</h1>

				<div class="card mb-4">


					<div class="card-header">
						<div class="row">
							<div class="col-sm-6">
								<i class="fas fa-briefcase mr-1"></i>{{ item }}
							</div>
							<div class="text-right col-md-6">
								<a class="nav-link active" href="{{ path('edit_case', {case: item.id}) }}">Edit</a>
							</div>
						</div>
					</div>
					<div class="row">
						<div class="col-sm-12">


							<div class="card-body row">
								<div class="mb-3 col-sm-10 offset-1">
									<div class="card bg-light mb-2">
										<div class="card-header">
											<div class="row">
												<div class="text-left col-md-6"><p class="nav-link">{{ item }}</p></div>

											</div>
										</div>
										<div class="card-body">
											First name: {{ item.firstName }}<br/>
											Last name: {{ item.lastName }}<br/>
											Address: {{ item.address }}<br/>
											Mobile: {{ item.mobile }}<br/>
											Email: {{ item.email }}<br/>
										</div>
									</div>
								</div>

								<div class="mb-3 col-sm-10 offset-1">
									<div class="card bg-light mb-2">
										<div class="card-header">
											<div class="row">
												<div class="text-left col-md-6"><p class="nav-link">Cases</p></div>
											</div>
										</div>
										<div class="card-body">
											<ul>
											{% for affectation in item.affectations %}
												{% set satus = 1 %}
												{% set status_action = 'activate'%}
												{% if affectation.status %}
													{% set satus = 0 %}
													{% set status_action = 'Diactivate'%}
												{% endif %}
												<li>
													<a href="{{ path('show_case', {case: affectation.folder.id}) }}">
														{{ affectation.folder }} : {{ affectation.folder.firstName ~ ' ' ~ affectation.folder.lastName }} ({{ affectation.amount }} â‚¬)</a> |

													<a href="{{ path('status_affectation', {entity: affectation.id, status: satus}) }}">
														{{ status_action }}</a>
												</li>
											{% endfor %}
											</ul>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>

				</div>
			</div>
		</main>
	</div>
{% endblock %}
