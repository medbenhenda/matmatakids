{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <div id="layoutSidenav_content">
        <main>
            <div class="container-fluid">
                <h1 class="mt-4">User</h1>
                <div class="card mb-4">
                    <div class="d-flex flex-row-reverse bd-highlight mb-2">
                        <div class="p-2 bd-highlight">
                            <a href="{{ path('user_index') }}">Back to list</a>
                        </div>
                        <div class="p-2 bd-highlight">
                            <a href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                        </div>
                        <div class="p-2 bd-highlight">{{ include('user/_delete_form.html.twig') }}</div>
                    </div>

                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table">
                                <tbody>
                                <tr>
                                    <th>Id</th>
                                    <td>{{ user.id }}</td>
                                </tr>
                                <tr>
                                    <th>Email</th>
                                    <td>{{ user.email }}</td>
                                </tr>
                                <tr>
                                    <th>Roles</th>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                </tr>
                                <tr>
                                    <th>FirstName</th>
                                    <td>{{ user.firstName }}</td>
                                </tr>
                                <tr>
                                    <th>LastName</th>
                                    <td>{{ user.lastName }}</td>
                                </tr>
                                <tr>
                                    <th>Mobile</th>
                                    <td>{{ user.mobile }}</td>
                                </tr>
                                <tr>
                                    <th>Address</th>
                                    <td>{{ user.address }}</td>
                                </tr>
                                <tr>
                                    <th>ZipCode</th>
                                    <td>{{ user.zipCode }}</td>
                                </tr>
                                <tr>
                                    <th>City</th>
                                    <td>{{ user.city }}</td>
                                </tr>
                                <tr>
                                    <th>Country</th>
                                    <td>{{ user.country }}</td>
                                </tr>
                                <tr>
                                    <th>Position</th>
                                    <td>{{ user.position }}</td>
                                </tr>
                                <tr>
                                    <th>EnterDate</th>
                                    <td>{{ user.enterDate ? user.enterDate|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>IsActive</th>
                                    <td>{{ user.isActive ? 'Yes' : 'No' }}</td>
                                </tr>
                                <tr>
                                    <th>LastLogin</th>
                                    <td>{{ user.lastLogin ? user.lastLogin|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>IpLastLogin</th>
                                    <td>{{ user.ipLastLogin }}</td>
                                </tr>
                                <tr>
                                    <th>CreatedAt</th>
                                    <td>{{ user.createdAt ? user.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th>UpdatedAt</th>
                                    <td>{{ user.updatedAt ? user.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </main>

    </div>
{% endblock %}